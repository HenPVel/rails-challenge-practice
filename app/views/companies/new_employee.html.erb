<h1>New Employee Form:</h1>
<% if flash[:errors] %>
  <% flash[:errors].each do |msg| %>
    <p style="color: red;"><%= msg %></p>
  <% end %>
<% end %>

<%= form_for @employee do |f| %>
  
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.hidden_field :company_id %>
  <%= f.submit %>
<% end %>